[user]
  email = dh.kim@snu.ac.kr
  name = Donghyun Kim
[alias]
  last = log -1 HEAD
  unstage = reset HEAD --
[core]
  editor = nvim
[diff]
  tool = vimdiff
[merge]
	tool = fugitive
[difftool]
  prompt = false
  trustExitCode = true
[difftool "vimdiff"]
  path = nvim
[mergetool "fugitive"]
  cmd = nvim -f -c "Gvdiffsplit!" "$MERGED"
